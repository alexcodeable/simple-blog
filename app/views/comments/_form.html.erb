
        <form action="<%= article_comments_path(@article)%>" method="Post" class="commenting-form">
        <div class="row">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >
            <% if !@parent.nil? %>
           <input type="hidden" name="comment[parent_id]" value="<%= parent.id%>" >
            <% end %>
            <div class="form-group col-md-12">
                <textarea name="comment[content]" id="usercomment" placeholder="Type your comment" class="form-control"></textarea>
            </div>
            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-secondary">Publish</button>
            </div>
        </div>
        </form>